[Unit]
Description=The springpetclinic service


[Service]
User=spring
WorkingDirectory=/home/spring
ExecStart=/usr/bin/java -jar /home/spring/spring-petclinic/target/spring-petclinic-3.0.0-SNAPSHOT.jar
SuccessExitStatus=101
TimeoutStopSec=10
Restart=on-failure
RestartSec=5


[Install]
WantedBy=multi-user.target